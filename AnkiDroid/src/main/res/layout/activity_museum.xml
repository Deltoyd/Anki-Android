<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ikasi_bg"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <!-- App title -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IKASI"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/ikasi_text"
        android:gravity="center"
        android:paddingTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Painting puzzle (square, centred) -->
    <com.ichi2.anki.ui.museum.PaintingPuzzleView
        android:id="@+id/paintingView"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Study button â€” centred over the painting -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/studyButton"
        android:layout_width="170dp"
        android:layout_height="52dp"
        android:text="Ikasi â†’"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_study"
        android:elevation="3dp"
        app:layout_constraintTop_toTopOf="@id/paintingView"
        app:layout_constraintBottom_toBottomOf="@id/paintingView"
        app:layout_constraintStart_toStartOf="@id/paintingView"
        app:layout_constraintEnd_toEndOf="@id/paintingView" />

    <!-- Streak bar -->
    <LinearLayout
        android:id="@+id/streakBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/paintingView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/streakText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”¥ 0 days"
            android:textSize="18sp"
            android:textColor="@color/ikasi_text"
            android:layout_marginEnd="14dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/livesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â˜ â˜ â˜"
            android:textSize="18sp"
            android:textColor="@color/ikasi_text" />
    </LinearLayout>

    <!-- Heatmap (fills remaining vertical space) -->
    <com.ichi2.anki.ui.museum.HeatmapView
        android:id="@+id/heatmapView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/streakBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
