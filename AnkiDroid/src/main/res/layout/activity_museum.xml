<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/museolingo_bg">

    <!-- Main scrollable content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="88dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Top Navigation Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:paddingBottom="16dp">

                <!-- Deck Selector (Left) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/languageSelector"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Default"
                    android:textSize="14sp"
                    android:textColor="@color/museolingo_text"
                    android:paddingStart="16dp"
                    android:paddingEnd="12dp"
                    app:icon="@android:drawable/arrow_down_float"
                    app:iconGravity="end"
                    app:iconSize="16dp"
                    app:iconTint="@color/museolingo_text"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:strokeColor="@color/museolingo_text_secondary"
                    app:strokeWidth="1dp"
                    app:cornerRadius="18dp" />

                <!-- App Title (Center) -->
                <TextView
                    android:id="@+id/appTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="MuseoLingo"
                    android:textSize="20sp"
                    android:textColor="@color/museolingo_text"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:textStyle="bold" />

                <!-- Menu Icon (Right) -->
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/menuButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="Menu"
                    app:fabCustomSize="40dp"
                    app:srcCompat="@android:drawable/ic_menu_view"
                    app:tint="@color/museolingo_text"
                    app:backgroundTint="@android:color/transparent"
                    app:elevation="0dp"
                    app:borderWidth="1dp" />
            </LinearLayout>

            <!-- Stats Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingBottom="20dp">

                <!-- Streak Stat -->
                <TextView
                    android:id="@+id/streakStat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”¥ 14"
                    android:textSize="16sp"
                    android:textColor="@color/museolingo_text"
                    android:textStyle="bold"
                    android:paddingEnd="24dp" />

                <!-- Today's Cards Stat -->
                <TextView
                    android:id="@+id/todayStat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“– 32 today"
                    android:textSize="16sp"
                    android:textColor="@color/museolingo_text_secondary" />
            </LinearLayout>

            <!-- Gallery ViewPager (fixed height via aspect ratio wrapper) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/galleryPager"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="H,5:4" />

                <!-- Cinematic puzzle break overlay (sits on top of the gallery) -->
                <com.ichi2.anki.ui.museum.PuzzleBreakAnimationView
                    android:id="@+id/puzzleBreakOverlay"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="@id/galleryPager"
                    app:layout_constraintBottom_toBottomOf="@id/galleryPager"
                    app:layout_constraintStart_toStartOf="@id/galleryPager"
                    app:layout_constraintEnd_toEndOf="@id/galleryPager" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Page indicator dots -->
            <LinearLayout
                android:id="@+id/pageIndicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="8dp" />

            <!-- Caption (updates on swipe) -->
            <TextView
                android:id="@+id/captionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/museolingo_text_secondary"
                android:fontFamily="serif"
                android:gravity="center"
                android:paddingTop="0dp"
                android:paddingBottom="24dp" />

            <!-- Activity Heatmap Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp">

                <!-- Year Header -->
                <TextView
                    android:id="@+id/heatmapYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2026"
                    android:textSize="18sp"
                    android:textColor="@color/museolingo_text"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:paddingBottom="4dp" />

                <!-- Subheader -->
                <TextView
                    android:id="@+id/heatmapSubheader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="517 reviews   19 days"
                    android:textSize="13sp"
                    android:textColor="@color/museolingo_text_secondary"
                    android:gravity="center"
                    android:paddingBottom="16dp" />

                <!-- Heatmap View -->
                <com.ichi2.anki.ui.museum.HeatmapView
                    android:id="@+id/heatmapView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom CTA Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/reviewButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:text="ðŸ“–  Review Cards"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:backgroundTint="@color/museolingo_amber"
        app:cornerRadius="28dp"
        app:icon="@android:drawable/ic_notification_overlay"
        app:iconGravity="end"
        app:iconTint="@android:color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
