<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/museolingo_bg">

    <!-- Main scrollable content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="88dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Top Navigation Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:paddingBottom="16dp">

                <!-- Language Selector (Left) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/languageSelector"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="ðŸ‡ªðŸ‡¸ Basque"
                    android:textSize="14sp"
                    android:textColor="@color/museolingo_text"
                    android:paddingStart="12dp"
                    android:paddingEnd="8dp"
                    app:icon="@android:drawable/arrow_down_float"
                    app:iconGravity="end"
                    app:iconSize="16dp"
                    app:iconTint="@color/museolingo_text"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:strokeColor="@android:color/transparent"
                    app:cornerRadius="18dp"
                    android:background="@android:color/transparent" />

                <!-- App Title (Center) -->
                <TextView
                    android:id="@+id/appTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="MuseoLingo"
                    android:textSize="20sp"
                    android:textColor="@color/museolingo_text"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:textStyle="bold" />

                <!-- Menu Icon (Right) -->
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/menuButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="Menu"
                    app:fabCustomSize="40dp"
                    app:srcCompat="@android:drawable/ic_menu_view"
                    app:tint="@color/museolingo_text"
                    app:backgroundTint="@android:color/transparent"
                    app:elevation="0dp"
                    app:borderWidth="1dp" />
            </LinearLayout>

            <!-- Stats Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingBottom="20dp">

                <!-- Streak Stat -->
                <TextView
                    android:id="@+id/streakStat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”¥ 14"
                    android:textSize="16sp"
                    android:textColor="@color/museolingo_text"
                    android:textStyle="bold"
                    android:paddingEnd="24dp" />

                <!-- Today's Cards Stat -->
                <TextView
                    android:id="@+id/todayStat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“– 32 today"
                    android:textSize="16sp"
                    android:textColor="@color/museolingo_text_secondary" />
            </LinearLayout>

            <!-- Main Feature Card (Puzzle) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/puzzleCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Puzzle View (Landscape) -->
                    <com.ichi2.anki.ui.museum.PaintingPuzzleView
                        android:id="@+id/paintingView"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintDimensionRatio="3:2" />

                    <!-- Bottom Controls Container -->
                    <LinearLayout
                        android:id="@+id/controlsContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:gravity="center_vertical"
                        app:layout_constraintTop_toBottomOf="@id/paintingView"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <!-- Progress Bar (Left) -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ProgressBar
                                android:id="@+id/progressBar"
                                android:layout_width="match_parent"
                                android:layout_height="4dp"
                                android:progressTint="@color/museolingo_amber"
                                android:max="100"
                                android:progress="37"
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal" />

                            <TextView
                                android:id="@+id/progressText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="37/100"
                                android:textSize="12sp"
                                android:textColor="@color/museolingo_text_secondary"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>

                        <!-- Peek Button (Right) -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/peekButton"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="ðŸ‘ Peek"
                            android:textSize="14sp"
                            android:textColor="@android:color/white"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:layout_marginStart="16dp"
                            app:backgroundTint="#80000000"
                            app:cornerRadius="18dp" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Caption below card -->
            <TextView
                android:id="@+id/captionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Basque Countryside"
                android:textSize="14sp"
                android:textColor="@color/museolingo_text_secondary"
                android:fontFamily="serif"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="24dp" />

            <!-- Activity Heatmap Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp">

                <!-- Year Header -->
                <TextView
                    android:id="@+id/heatmapYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2026"
                    android:textSize="18sp"
                    android:textColor="@color/museolingo_text"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:paddingBottom="4dp" />

                <!-- Subheader -->
                <TextView
                    android:id="@+id/heatmapSubheader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="517 reviews   19 days"
                    android:textSize="13sp"
                    android:textColor="@color/museolingo_text_secondary"
                    android:gravity="center"
                    android:paddingBottom="16dp" />

                <!-- Heatmap View -->
                <com.ichi2.anki.ui.museum.HeatmapView
                    android:id="@+id/heatmapView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom CTA Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/reviewButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:text="ðŸ“–  Review Cards"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:backgroundTint="@color/museolingo_amber"
        app:cornerRadius="28dp"
        app:icon="@android:drawable/ic_notification_overlay"
        app:iconGravity="end"
        app:iconTint="@android:color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
